no_recovery_mode; if yesno "$(gecpc "GearLock Device ID Faker" "#")" " Confirm Action " " \n Are you sure to reset your Android DeviceID ?" 7 70; then clear && tput civis; geco "\n\n++++ Current DeviceID : $(settings get secure android_id)\n"; for f in {1..20}; do sleep 0.3; rVar="$(sed 's|-||g' /proc/sys/kernel/random/uuid | fold -w ${1:-16} | head -n1 | rev)"; echo -n "\$\$ Evaluating device ID : "; printf "%s\r" "$rVar"; done; tput cnorm; echo -ne "%% Evaluated device ID  : $rVar\n"; settings put secure android_id $rVar >/dev/null 2>&1; else geco "\n ${_as_you_wish_}"; fi
